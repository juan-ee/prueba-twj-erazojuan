<div class="container">
  <form action="aplicacion/crearAplicacion">
    <h1 align="center">REGISTRAR NUEVA APLICACION</h1>
    <div class="row">
      <div class="col-sm-3">
        <img src="images/aplicacion/izq.jpg" height="200" width="200" align="center" alt="">
      </div>
      <div class="col-sm-1"></div>
      <div class="col-sm-4">
        <div class="form-group">
          <label for="nomb">Nombre</label>
          <input type="text" class="form-control" name="nombre" id="nomb" placeholder="Nombre de la aplicacion" required>
        </div>
        <div class="form-group">
          <label for="version">Version</label>
          <input type="number" class="form-control" name="version" id="version" placeholder="Version" required>
        </div>

        <div class="form-group">
          <label for="tamanio">Tamaño(MB)</label>
          <input type="number" class="form-control" name="tamanio" min="1" id="tamanio" placeholder="Tamaño total" required>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">Crear</button>
        </div>
      </div>
      <div class="col-sm-1"></div>
      <div class="col-sm-3">
        <img src="images/aplicacion/apps.jpg" height="200" width="200" align="center" alt="">
      </div>
    </div>
  </form>
  <!--col-xs-4.col-sm-4.col-md-4.col-lg-4.col-xl-4-->
</div>
