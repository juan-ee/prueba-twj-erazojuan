<div class="container">
  <form action="/aplicacion/editarAplicacion">
    <h1>Editar <%= aplicacion.nombre %></h1>
    <div class="row">
      <div class="col-sm-4">
        <div class="form-group">
          <label for="nomb">Nombre</label>
          <input type="text" class="form-control" name="nombre" id="nomb" placeholder="Nombre de la aplicacion" value="<%= aplicacion.nombre %>" required>
        </div>
        <div class="form-group">
          <label for="version">Version</label>
          <input type="number" class="form-control" name="version" id="version" placeholder="Version" value="<%= aplicacion.version %>" required>
        </div>

        <div class="form-group">
          <label for="tamanio">Tamaño(MB)</label>
          <input type="number" class="form-control" name="tamanio" min="1" id="tamanio" placeholder="Tamaño total" value="<%= aplicacion.tamanio %>" required>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">Editar</button>
        </div>
      </div>
      <div class="col-sm-2">
        <input type="hidden" name="id" value="<%= aplicacion.id %>">
      </div>
      <div class="col-sm-3">
        <img src="/images/editar.jpeg" alt="">
      </div>
    </div>
  </form>
</div>
