<div class="container">
  <form action="/celular/editarCelular">
    <h1>Editar <%= celular.nombre %></h1>
    <div class="row">
      <div class="col-sm-4">
        <div class="form-group">
          <label for="nomb">Nombre</label>
          <input type="text" class="form-control" name="nombre" id="nomb" placeholder="Nombre de la celular" value="<%= celular.nombre %>" required>
        </div>
        <div class="form-group">
          <label for="sistemaoperativo">Sistema Operativo</label>
          <input type="text" class="form-control" name="sistemaoperativo" id="sistemaoperativo" placeholder="Sistema Operativo" value="<%= celular.sistemaoperativo %>" required>
        </div>
        <div class="form-group">
          <label for="version">Version</label>
          <input type="number" class="form-control" name="version" id="version" placeholder="Version" value="<%= celular.version %>" required>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">Editar</button>
        </div>
      </div>
      <div class="col-sm-2">
        <input type="hidden" name="id" value="<%= celular.id %>">
      </div>
      <div class="col-sm-3">
        <img src="/images/editar.jpeg" alt="">
      </div>
    </div>
  </form>
</div>
